{
  "compilerOptions": {
    "target": "ES2020",                  
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"]                    
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
